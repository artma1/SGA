@model SGA.Models.StudentClass

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar usuário</h1>

<h4>Usuário</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentClassName" class="control-label"></label>
                <input asp-for="StudentClassName" class="form-control" />
                <span asp-validation-for="StudentClassName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Students" class="control-label"></label>
                <input asp-for="Students" class="form-control" />
                <span asp-validation-for="Students" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-info">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
