@model IEnumerable<SGA.ViewModels.StudentViewModel>

@{
  ViewData["Title"] = "Index";
}

<h1>Alunos</h1>
<p>Aqui estão todos os alunos cadastrados</p>
<p>
  <a asp-action="Create" class="btn btn-success">Adicionar novo aluno</a>
</p>
@if (TempData["SuccessMessage"] != null)
{
  <div class="alert alert-success">
    @TempData["SuccessMessage"]
  </div>
}
<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Name)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.AverageGrades)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Attendance)
      </th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.AverageGrades)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Attendance)
        </td>
        <td>
          <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
            <button type="submit" class="btn btn-danger">Deletar</button>
          </form>         
        </td>
      </tr>
    }
  </tbody>
</table>